        printf("AVISO:\n");
        printf("  Total de dinheiro recebido: R$ %.2f\n", recebido);
        printf("  Total de pagamentos realizados: R$ %.2f\n", pagamentos);
        printf("  Saldo atual: R$ %.2f\n", soma);
    } else if (soma < -500) {
        printf("AVISO:\n");
        printf("  Total de dinheiro recebido: R$ %.2f\n", recebido);
        printf("  Total de pagamentos realizados: R$ %.2f\n", pagamentos);
        printf("  Saldo atual: R$ %.2f\n", soma);
    }
    
}
